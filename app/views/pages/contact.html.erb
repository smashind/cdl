<% content_for :head do %>
  <title>CDLStudyGuideHQ | Contact Us</title>
  <meta name="description" content="Want to get in touch? Click here to contact CDL Study Guide HQ.">
<% end %>

<div class="row text-center">
  <div class="col-sm-12">
    <h1>Contact Us</h1>
    <p>Questions or comments? We'd love to hear from you! Please fill out the form below and we'll try to respond as soon as possible:</p>
  </div>
</div>

<div class="row contact">
  <div class="col-md-8 col-md-offset-2">
		<%= form_for(@contact_message = ContactMessage.new) do |f| %>
    <div class="well bs-component">
			<div class="form-horizontal">
				<fieldset>
					<div class="form-group">
					  <div class="col-sm-2">
						  <%= f.label :name, "Name", class: "control-label" %>
						</div>
						<div class="col-sm-6">
							<%= f.text_field :name, class: "form-control", required: true, autofocus: true %>
						</div>
					</div>

					<div class="form-group">
					  <div class="col-sm-2">
						  <%= f.label :email, class: "control-label" %>
						</div>
						<div class="col-sm-6">
							<%= f.email_field :email, class: "form-control", required: true, title: "Please enter a valid emaiil address." %>
						</div>
					</div>

					<div class="form-group">
					  <div class="col-sm-2">
						  <%= f.label :message, class: "control-label" %>
						</div>
						<div class="col-sm-10">
							<%= f.text_area :message, class: "form-control", required: true, rows: 5 %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-2">
							<%= f.submit "Send Message", class: "btn btn-primary pull-right" %>
						</div>
					</div>
				</fieldset>
			</div>
		</div>
		<% end %> 
	</div>
</div>