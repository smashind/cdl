<div class="form-horizontal home">
  <fieldset>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.email_field :email, required: true, class: "form-control" %>
        </div>
      </div>

      <%= f.hidden_field :package, value: package %>

      <div class="form-group">
        <%= f.label :password, class: "col-md-4 control-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="col-md-8">
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-8 col-md-offset-4">
        <%= f.submit "LET ME IN", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>
  </fieldset>
</div>