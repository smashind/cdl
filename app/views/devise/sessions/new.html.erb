<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="well bs-component">
      <div class="form-horizontal">
        <fieldset>
          <legend>Log in and start studying</legend>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="col-sm-9 col-sm-offset-3 forgot">
              <%= render "devise/shared/links" %>
            </div>
          </div>

          <div class="form-group">
            <% if devise_mapping.rememberable? -%>
              <div class="col-sm-9 col-sm-offset-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          </div>

          <div class="col-sm-9 col-sm-offset-3 submit-btn">
            <%= f.submit "Let's Get Crackin!", class: "btn btn-primary btn-block" %>
          </div>
          <% end %>

        </fieldset>
      </div>
    </div>
  </div>
</div>
